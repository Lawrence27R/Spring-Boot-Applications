package com.aurionpro.bankapp.repository;

import java.util.Optional;

import org.springframework.data.domain.Page;
import org.springframework.data.domain.Pageable;
import org.springframework.data.jpa.repository.JpaRepository;

import com.aurionpro.bankapp.entity.User;

public interface UserRepository extends JpaRepository<User, Integer> {
	Optional<User> findByEmailIdAndPassword(String emailId, String password);

	Optional<User> findByEmailId(String emailId);

	boolean existsByEmailId(String emailId);

	Optional<User> findByUserId(Integer userId);

    @Query("SELECT u FROM User u JOIN u.roles r WHERE r.name = 'CUSTOMER' AND u.firstname LIKE %:firstname%")
    Page<User> findCustomersByFirstname(String firstname, Pageable pageable);

    @Query("SELECT u FROM User u JOIN u.roles r WHERE r.name = 'CUSTOMER' AND u.lastname LIKE %:lastname%")
    Page<User> findCustomersByLastname(String lastname, Pageable pageable);

    @Query("SELECT u FROM User u JOIN u.roles r WHERE r.name = 'CUSTOMER' AND u.firstname LIKE %:firstname% AND u.lastname LIKE %:lastname%")
    Page<User> findCustomersByFirstnameAndLastname(String firstname, String lastname, Pageable pageable);

	Page<User> findAll(Pageable pageable);
}
