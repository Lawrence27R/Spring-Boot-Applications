package com.aurionpro.bankapp.entity;

import jakarta.persistence.*;
import jakarta.validation.constraints.NotBlank;
import jakarta.validation.constraints.NotNull;
import jakarta.validation.constraints.Pattern;
import jakarta.validation.constraints.Positive;
import lombok.Data;
import lombok.NoArgsConstructor;

@Entity
@Table(name = "customer_account")
@Data
@NoArgsConstructor
public class CustomerAccount {
    
    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private int accountId;

//    @NotBlank(message = "Account number is required")
//    @Pattern(regexp = "^\\d+$", message = "Account number must contain only digits")
    @Column(nullable = false, unique = true)
    private String accountNumber;

//    @NotNull(message = "Customer balance is required")
//    @Positive(message = "Customer balance must be greater than 0")
    @Column(nullable = false)
    private double customerBalance;

    @ManyToOne
    @JoinColumn(name = "customerId", nullable = false)
    private Customer customer;
}
